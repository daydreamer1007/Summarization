@inherits LayoutComponentBase

<MudThemeProvider Theme="defaultTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudSpacer/>
        <MudText Typo="Typo.h6">Peringkas Berita Otomatis</MudText>
    </MudAppBar>
    <MudMainContent Class="pt-16 px-16" Style="padding-bottom:100px;">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Elevation="1" Color="Color.Primary" Style="top: auto; bottom: 0;" Dense="true" Fixed="true">
        <MudGrid Justify="Justify.Center">
            <MudText Style="font-size:small">Teknik Informatika Universitas Padjadjaran (2021 - @DateTime.Now.Year) &copy; Ibrahim Yahya Nasution</MudText>
        </MudGrid>
    </MudAppBar>
</MudLayout>

@code{
    MudTheme defaultTheme = new MudTheme() {
        Palette = new Palette() {
            Background = "#d9d9d9",
            TextPrimary = "rgba(0, 0, 0, 0.70)"
        }
    };
}